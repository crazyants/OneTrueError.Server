@model codeRR.Server.Web.Models.Wizard.ConfigurePackageViewModel
@{
    ViewData["Title"] = "Configure package";
    Layout = "_Layout.cshtml";
}
@section css
{
    <style>
        code { background: transparent !important;}
    </style>
}
<div class="container">
    <div class="row">
        <div>
            <h1>Application configuration</h1>
            <p>
                Follow the instructions below.
            </p>
            <div>
                @Html.Raw(Model.Instruction)
            </div>
            <div>

                <p>
                    <a class="btn btn-primary" href="@Url.Action("Validate", new{Model.LibraryName, Model.ApplicationId})" target="_self">Configuration is done</a> 
                    <a href="http://discuss.coderrapp.com" target="_self">Help</a> | 
                    <a href="@Url.Content("~/")#/">Exit wizard</a>
                </p>

            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/vs.min.css" rel="stylesheet">
    <script>
        $(document).ready(function () {
            $('pre code').each(function (i, block) {
                hljs.highlightBlock(block);
            });
        });
    </script>
}
