@using codeRR.Server.Web.Areas.Admin
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - codeRR</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" type="text/css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
</head>
<body>
    <div class="navbar navbar-dark bg-dark text-white">
        <div class="container">
            <span class="navbar-brand">codeRR - Administration area</span>
            <span class="pull-right">
                <a href="@Url.Content("~/#")">
                    <span class="fa  fa-2x fa-home text-warning"></span>
                </a>
            </span>
        </div>
    </div>
    <div class="container body-content mt-4">
        <div class="row">
            <div class="col-lg-2 col-md-8" style="background-color: #eee">
                <h2>Settings</h2>
                <ul>
                    @foreach (var step in AdminMenu.Steps)
                    {
                        <li @(Url.IsCurrentStep(step) ? "selected=\"selected\"" : "")>
                            <a href="@Url.Content(step.VirtualPath)">@step.DisplayName</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-lg-10 col-md-4">
                <div id="YoView">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <hr />
                <footer>
                    <p>
                        &copy; 2017 - 1TCompany AB | <a href="http://discuss.coderrapp.com">Join our community</a>
                    </p>
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", false)
</body>
</html>